mixin filter()
  +b.filter&attributes(attributes)
    +e.IMG(src='assets/images/bg1.svg').bg
    .container
      +e.P.heading Фильтр поиска:
      +e.list
        +e.list-item
          +e.list-icon
            img(src='assets/images/filter1.png')
          +e.P.list-text
            a(href='#typespopup').js-fancybox-popup Тип отдыха
          +e.P.list-text._mobile Тип отдыха
          +e.A(href='#typespopup').list-select.js-fancybox-popup Любой
            +icon('arrow_down').list-select-icon
        +e.list-item
          +e.list-icon._cover
            img(src='assets/images/filter2.jpg')
          +e.P.list-text
            a(href='#locationpopup').js-fancybox-popup Расположение: карта, метро, районы
          +e.P.list-text._mobile Расположение
          +e.A(href='#locationpopup').list-select.js-fancybox-popup Любое
            +icon('arrow_down').list-select-icon
        +e.list-item
          +e.list-icon
            img(src='assets/images/filter3.jpg')
          +e.P.list-text
            a(href='#categoriespopup').js-fancybox-popup Стоимость, тип парной и другое
          +e.P.list-text._mobile Дополнительно
          +e.A(href='#categoriespopup').list-select.js-fancybox-popup Ничего не выбрано
            +icon('arrow_down').list-select-icon
      block


mixin filter-tags(switcher)
  +e.tags&attributes(attributes)
    +e.tag
      +e.SPAN.tag-symbol ₽
      | 1000-2500 час
      +e.SPAN.tag-close
    +e.tag
      +e.SPAN.tag-icon
      | метро Чертановская
      +e.SPAN.tag-close
    +e.tag._blue
      | финская парная
      +e.SPAN.tag-close
    +e.A(href='#').tag._grey._reset
      | сбросить все
    if switcher
      +e.views
        +e.A(href='#').view
          +icon('view1')
        +e.A(href='#').view
          +icon('view2')
