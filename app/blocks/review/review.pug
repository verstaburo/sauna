mixin review()
  +b.review&attributes(attributes)
    +e.top
      +e.top-img
        img(src='assets/images/review1.jpg')
      +e.P.heading
        a(href='#') Усадьба банная на Угрешской
      +rating(2).review__top-rating
      +e.P.reviews Отзывы 231
    block
            
mixin review-block(author, images, text, short)
  +e.content&attributes(attributes)
    if !short
      +e.mob-top
        +e.P.top-author-name= author + ' о(об)'
        +e.P.heading Усадьба банная на Угрешской
    +e.author
      +e.P.author-name= author
      +e.P.date 15 мая 2015
      if short
        +rating(3).review__total-rating
    +e.ratings
      +e.ratings-col
        +e.P.ratings-item Персонал
          +rating(3).review__rating
        +e.P.ratings-item Услуги 
          +rating(3).review__rating
      +e.ratings-col
        +e.P.ratings-item Интерьер
          +rating(3).review__rating
        +e.P.ratings-item Расположение
          +rating(3).review__rating
    +e.P.text= text
    if images
      +e.images
        +e.A(href='assets/images/review2_big.jpg' data-fancybox=images).img
          img(src='assets/images/review2.jpg')
        +e.A(href='assets/images/review2_big.jpg' data-fancybox=images).img
          img(src='assets/images/review2.jpg')
    +e.useful
      +e.P.useful-text Полезный отзыв?
      +e.useful-buttons
        +e.A(href='#').useful-button Да
          +e.SPAN.useful-count 7
        +e.A(href='#').useful-button Нет
          +e.SPAN.useful-count 2
          
mixin review-answer(author, text, short)
  +e.content._answer&attributes(attributes)
    +icon('comment_arrow').__answer-icon
    if !short
      +e.mob-top
        +e.P.top-author-name= author
    +e.author
      +e.P.author-name= author
      +e.P.date 15 мая 2015
    +e.P.text= text

mixin review-short(author, images, text, answer)
  +b.review._short&attributes(attributes)
    +review-block(author, images, text, true)
    if answer
      +review-answer('Администрация сауны', 'Рыночная информация многопланово стабилизирует сублимированный имидж. Опросная анкета, на первый взгляд, допускает комплексный анализ ситуации, полагаясь на инсайдерскую информацию. Пак-шот трансформирует ролевой стратегический маркетинг.', true)._answer
