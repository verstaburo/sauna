mixin result(title, name, onetel)
  +b.result&attributes(attributes)
    +e.P.title= title
    +e.content
      +e.left
        +e.row
          +e.P.name
            a(href='#')= name
          +e.rating
            +rating(3)
            +e.P.reviews 15 отзывов
        +e.row
          +e.P.address Москва, ул. Ленина 16/2
          +e.tels
            +e.A(href='tel:+74951853423').tel +7(495)185-34-23
            if !onetel
              +e.A(href='tel:+74951853423').tel +7(495)185-34-23
        +e.P.text Финская, турецкая, комната отдыха, массаж, бильярд. 3 зала. Круглосуточно.
      +e.right
        +e.P.price 1500-2000 руб/час
        +e.A(href='#').button подробнее
        