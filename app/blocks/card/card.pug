mixin card-reviewform()
  +b.card-reviewform._success&attributes(attributes)
    +e.H3.heading Отзывы
      +e.SPAN.count 21
      +e.A(href='#').link Оставить отзыв
    +e.content
      +e.FORM.form
        +e.form-section._top
          +e.INPUT(type='text' name='name' placeholder='Ваше имя и фамилия').field._short
          +e.TEXTAREA(name='comment' placeholder='Ваш отзыв').field._textarea
          +e.file
            +e.LABEL.file-label Добавить фото
              input(type='file')
            +icon('file_arrow').__file-icon
          +e.P.hint Указывать телефон, электронную почту или адрес сайта на фото запрещено!
