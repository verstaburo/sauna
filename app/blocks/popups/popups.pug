mixin popup-category(count, heading, name, texts)
  +e.category&attributes(attributes)
    +e.P.category-heading= heading
    +e.UL.category-list
      - for (var i = 0; i < count; i++)
        +label-category(name, 'type' + i, texts[i])

mixin label-category(name, value, text)
  +e.LI.category-item
    +e.LABEL.type
      input(type='checkbox', name=name, value=value)
      +e.SPAN.type-icon
      +e.SPAN.type-text= text
      
mixin label-count(value, text)
  +e.LABEL.count-item
    input(type='radio', name='count', value=value)
    +e.SPAN.count-radio
    +e.SPAN.count-text= text

