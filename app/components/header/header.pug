mixin header()
  +b.header&attributes(attributes)
    .container
      +e.A(href='/').logo
        img(src='assets/images/vs_logo.svg')
      +e.FORM.search
        +e.BUTTON.search-button
          img(src='assets/images/search.png')
        +e.INPUT(placeholder='Название сауны, тип парной или адрес  г. Москва').search-input
      +e.A(href='#salespopup').discounts.js-fancybox-popup Акции и скидки
      +e.selectbox
        +e.select.js-dropdown-toggle
          span Москва
          +icon('arrow_down').select-arrow
        +dropdown().__dropdown#city-dropdown
          a(href='#').header__dropdown-close
          input(type='text' name='city' placeholder='Введите ваш город').header__city#city-autocomplete
    block
    

mixin header-line(img)
  +e.line&attributes(attributes)
    +e.IMG(src='assets/images/' + img).linebg

mixin header-line-menu(firstlink, firstlinkhref, secondlink, img, sidelink)
  +e.line&attributes(attributes)
    if img
      +e.IMG(src='assets/images/' + img).linebg
    +e.menu
      if sidelink
        +e.A(href='#').menu-link._side= sidelink
      if firstlink
        +e.A(href=firstlinkhref).menu-link= firstlink
      if secondlink
        +e.A(href='#').menu-link
          +icon('plus').menu-icon
          = secondlink
